<% const pageTitle=(typeof isGroup !=='undefined' && isGroup ? '' : '@' ) + (typeof hedefKullaniciAdi !=='undefined' ?
    hedefKullaniciAdi : 'Sohbet' ) + ' - Sohbet' ; const headerData=Object.assign({}, locals, { title: pageTitle }); %>
    <%- include('header', headerData) %>

        <style>
            .chat-container {
                display: flex;
                flex-direction: column;
                height: 80vh;
                background: white;
                border-radius: 25px;
                box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
                overflow: hidden;
                border: 1px solid #e0e0e0;
            }

            .chat-header {
                padding: 20px 30px;
                background: white;
                border-bottom: 2px solid #f0f0f0;
                display: flex;
                align-items: center;
                gap: 15px;
                z-index: 10;
                box-shadow: 0 5px 20px rgba(0, 0, 0, 0.03);
            }

            .header-user-info {
                display: flex;
                align-items: center;
                gap: 15px;
                text-decoration: none;
                color: #333;
                position: relative;
            }

            .header-avatar {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                object-fit: cover;
                border: 2px solid #667eea;
            }

            .status-dot-header {
                width: 14px;
                height: 14px;
                background-color: #ccc;
                border-radius: 50%;
                position: absolute;
                bottom: 0;
                left: 38px;
                border: 2px solid white;
            }

            .status-dot-header.online {
                background-color: #28a745;
            }

            .header-name {
                font-weight: 700;
                font-size: 1.2rem;
            }

            .messages-area {
                flex: 1;
                padding: 30px;
                overflow-y: auto;
                display: flex;
                flex-direction: column;
                gap: 20px;
                background: #fdfdfd;
                scroll-behavior: smooth;
            }

            .message {
                max-width: 70%;
                padding: 12px 20px;
                border-radius: 20px;
                position: relative;
                font-size: 0.95rem;
                line-height: 1.5;
                word-wrap: break-word;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
                animation: fadeIn 0.3s ease;
            }

            .message.received {
                background: white;
                border: 1px solid #e0e0e0;
                align-self: flex-start;
                border-bottom-left-radius: 5px;
                color: #333;
            }

            .message.sent {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                align-self: flex-end;
                border-bottom-right-radius: 5px;
            }

            .message.system {
                align-self: center;
                background: #f0f0f0;
                color: #666;
                font-size: 0.85rem;
                padding: 5px 15px;
                border-radius: 20px;
                box-shadow: none;
                max-width: 90%;
            }

            .message-time {
                font-size: 0.75rem;
                margin-top: 5px;
                opacity: 0.8;
                text-align: right;
            }

            .message-sender {
                font-size: 0.75rem;
                font-weight: 700;
                color: #667eea;
                margin-bottom: 3px;
                display: block;
            }

            .chat-input-area {
                padding: 25px;
                background: white;
                border-top: 2px solid #f0f0f0;
            }

            .chat-form {
                display: flex;
                gap: 15px;
                align-items: center;
            }

            .message-input {
                flex: 1;
                border: 2px solid #e0e0e0;
                border-radius: 50px;
                padding: 15px 25px;
                font-size: 1rem;
                transition: all 0.3s;
            }

            .message-input:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
                outline: none;
            }

            .send-btn {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                border: none;
                width: 55px;
                height: 55px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 1.2rem;
                transition: all 0.3s;
                box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
                cursor: pointer;
            }

            .send-btn:hover {
                transform: scale(1.1);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            }

            @keyframes fadeIn {
                from {
                    opacity: 0;
                    transform: translateY(10px);
                }

                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            .messages-area::-webkit-scrollbar {
                width: 8px;
            }

            .messages-area::-webkit-scrollbar-track {
                background: #f1f1f1;
            }

            .messages-area::-webkit-scrollbar-thumb {
                background: #ccc;
                border-radius: 4px;
            }

            .messages-area::-webkit-scrollbar-thumb:hover {
                background: #aaa;
            }
        </style>

        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="chat-container">

                    <div class="chat-header">
                        <a href="/profil/<%= hedefKullaniciAdi %>" class="header-user-info">
                            <div style="position:relative;">
                                <img src="<%= hedefProfil %>" alt="<%= hedefKullaniciAdi %>" class="header-avatar">
                                <% if (!isGroup) { %>
                                    <span class="status-dot-header <%= hedefStatus === 'online' ? 'online' : '' %>"
                                        id="header-status-<%= hedefKullaniciAdi %>"></span>
                                    <% } %>
                            </div>
                            <span class="header-name">
                                <%= isGroup ? '' : '@' %>
                                    <%= hedefKullaniciAdi %>
                                        <% if (isGroup) { %>
                                            <span
                                                style="font-size:0.8rem; background:#ffc107; padding:2px 6px; border-radius:8px; color:#333; margin-left:5px;">Grup</span>
                                            <% } %>
                            </span>
                        </a>
                    </div>

                    <div class="messages-area" id="mesaj-kutusu">
                        <% if (mesajlar && mesajlar.length> 0) { %>
                            <% mesajlar.forEach(mesaj=> { %>
                                <% const isMe=mesaj.gonderen===mevcutKullaniciAdi; %>
                                    <% const isSystem=mesaj.sistem===true; %>
                                        <% if (isSystem) { %>
                                            <div class="message system">
                                                <%= mesaj.icerik %>
                                            </div>
                                            <% } else { %>
                                                <div class="message <%= isMe ? 'sent' : 'received' %>">
                                                    <% if (!isMe && isGroup) { %>
                                                        <span class="message-sender">@<%= mesaj.gonderen %></span>
                                                        <% } %>
                                                            <div class="message-content">
                                                                <%= mesaj.icerik %>
                                                            </div>
                                                            <div class="message-time">
                                                                <%= mesaj.zaman %>
                                                            </div>
                                                </div>
                                                <% } %>
                                                    <% }); %>
                                                        <% } else { %>
                                                            <div class="text-center text-muted mt-5"
                                                                id="no-message-label">
                                                                <div style="font-size: 40px; margin-bottom: 10px;">👋
                                                                </div>
                                                                <p>Sohbeti başlatmak için bir mesaj yaz!</p>
                                                            </div>
                                                            <% } %>
                    </div>

                    <div class="chat-input-area">
                        <form id="chat-form" class="chat-form">
                            <input type="text" id="mesaj-input" class="message-input"
                                placeholder="<%= isGroup ? 'Gruba bir mesaj yaz...' : 'Bir mesaj yaz...' %>"
                                autocomplete="off">
                            <button type="submit" class="send-btn">➤</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>

        <script>
            const socket = io();
            const roomId = "<%= roomId %>";
            const benimAdim = "<%= mevcutKullaniciAdi %>";
            const hedefAd = "<%= hedefKullaniciAdi %>";
            const isGroupChat = <%= isGroup %>;

            socket.emit('join_chat_room', roomId);

            const mesajKutusu = document.getElementById('mesaj-kutusu');
            const form = document.getElementById('chat-form');
            const input = document.getElementById('mesaj-input');
            const noMessageLabel = document.getElementById('no-message-label');

            function scrollToBottom() {
                mesajKutusu.scrollTop = mesajKutusu.scrollHeight;
            }
            setTimeout(scrollToBottom, 100);

            form.addEventListener('submit', function (e) {
                e.preventDefault();
                const icerik = input.value.trim();

                if (icerik) {
                    socket.emit('send_message', {
                        roomId: roomId,
                        hedefKullaniciAdi: hedefAd,
                        mesajIcerigi: icerik
                    });

                    appendMessage(icerik, 'sent', new Date().toLocaleTimeString('tr-TR', { hour: '2-digit', minute: '2-digit' }), benimAdim);
                    input.value = '';
                }
            });

            socket.on('receive_message', function (data) {
                appendMessage(data.icerik, 'received', data.zaman, data.gonderen);
            });

            socket.on('status_update', function (data) {
                if (!isGroupChat && data.kullaniciAdi === hedefAd) {
                    const statusDot = document.getElementById('header-status-' + hedefAd);
                    if (statusDot) {
                        if (data.status === 'online') {
                            statusDot.classList.add('online');
                        } else {
                            statusDot.classList.remove('online');
                        }
                    }
                }
            });

            function appendMessage(text, type, time, sender) {
                if (noMessageLabel) noMessageLabel.style.display = 'none';

                const div = document.createElement('div');
                div.className = 'message ' + type;

                let senderHtml = '';
                if (isGroupChat && type === 'received') {
                    senderHtml = '<span class="message-sender">@' + sender + '</span>';
                }

                div.innerHTML = senderHtml +
                    '<div class="message-content">' + escapeHtml(text) + '</div>' +
                    '<div class="message-time">' + time + '</div>';

                mesajKutusu.appendChild(div);
                scrollToBottom();
            }

            function escapeHtml(text) {
                const map = {
                    '&': '&amp;',
                    '<': '&lt;',
                    '>': '&gt;',
                    '"': '&quot;',
                    "'": '&#039;'
                };
                return text.replace(/[&<>"']/g, function (m) { return map[m]; });
            }
        </script>

        <%- include('footer') %>