                                        <button type="submit" class="btn-submit">
                                            üöÄ G√∂nderiyi Payla≈ü
                                        </button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script>
        const icerikTextarea = document.getElementById('icerik');
        const charCounter = document.getElementById('charCounter');

        icerikTextarea.addEventListener('input', function () {
            const length = this.value.length;
            const maxLength = 1000;
            charCounter.textContent = length + ' / ' + maxLength + ' karakter';

            if (length > maxLength * 0.9) {
                charCounter.classList.add('danger');
                charCounter.classList.remove('warning');
            } else if (length > maxLength * 0.7) {
                charCounter.classList.add('warning');
                charCounter.classList.remove('danger');
            } else {
                charCounter.classList.remove('warning', 'danger');
            }
        });

        const resimUrlInput = document.getElementById('resimUrl');
        const imagePreview = document.getElementById('imagePreview');
        const imagePreviewContainer = document.getElementById('imagePreviewContainer');
        const removeImageBtn = document.getElementById('removeImageBtn');

        resimUrlInput.addEventListener('input', function () {
            const url = this.value.trim();
            if (url) {
                imagePreview.src = url;
                imagePreviewContainer.classList.add('active');

                imagePreview.onerror = function () {
                    imagePreviewContainer.classList.remove('active');
                };
            } else {
                imagePreviewContainer.classList.remove('active');
            }
        });

        removeImageBtn.addEventListener('click', function () {
            resimUrlInput.value = '';
            imagePreviewContainer.classList.remove('active');
        });

        const postForm = document.getElementById('postForm');
        postForm.addEventListener('submit', function (e) {
            const icerik = icerikTextarea.value.trim();
            if (icerik === '') {
                e.preventDefault();
                alert('L√ºtfen g√∂nderi i√ßeriƒüi girin!');
                icerikTextarea.focus();
            }
        });
    </script>
