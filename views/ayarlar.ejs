                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script>
        // Profil fotoƒürafƒ± √∂nizleme
        const profilFotoInput = document.getElementById('profilFotoInput');
        const profilOnizleme = document.getElementById('profilOnizleme');

        profilFotoInput.addEventListener('input', function () {
            const url = this.value.trim();
            if (url) {
                profilOnizleme.src = url;
                profilOnizleme.onerror = function () {
                    this.src = 'https://i.ibb.co/L9L1s1K/default-profile.png';
                };
            }
        });

        // Arka plan fotoƒürafƒ± √∂nizleme
        const arkaPlanInput = document.getElementById('arkaPlanInput');
        const arkaPlanOnizleme = document.getElementById('arkaPlanOnizleme');

        arkaPlanInput.addEventListener('input', function () {
            const url = this.value.trim();
            if (url) {
                arkaPlanOnizleme.src = url;
                arkaPlanOnizleme.onerror = function () {
                    this.src = 'https://i.ibb.co/VMyhV1J/default-cover.png';
                };
            }
        });

        // ≈ûifre e≈üle≈üme kontrol√º
        const yeniSifre = document.getElementById('yeniSifre');
        const yeniSifreTekrar = document.getElementById('yeniSifreTekrar');

        yeniSifreTekrar.addEventListener('input', function () {
            if (this.value !== yeniSifre.value) {
                this.setCustomValidity('≈ûifreler e≈üle≈ümiyor!');
            } else {
                this.setCustomValidity('');
            }
        });

        yeniSifre.addEventListener('input', function () {
            if (yeniSifreTekrar.value && yeniSifreTekrar.value !== this.value) {
                yeniSifreTekrar.setCustomValidity('≈ûifreler e≈üle≈ümiyor!');
            } else {
